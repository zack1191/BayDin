<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeTutorial"
        tools:targetApi="31">
        <activity
            android:name=".ui.theme.activities.AnswerActivity"
            android:exported="false"
            android:label="@string/title_activity_answer"
            android:theme="@style/Theme.ComposeTutorial" />
        <activity
            android:name=".ui.theme.activities.ChooseAnswerActivity"
            android:exported="false"
            android:label="@string/title_activity_choose_answer"
            android:theme="@style/Theme.ComposeTutorial" />
        <activity
            android:name=".ui.theme.activities.QuestionsActivity"
            android:exported="true"
            android:label="@string/title_activity_questions"
            android:theme="@style/Theme.ComposeTutorial">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.theme.activities.SampleActivity"
            android:exported="true"
            android:label="@string/title_activity_sample"
            android:theme="@style/Theme.ComposeTutorial" />
        <activity
            android:name=".ui.theme.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeTutorial" />
    </application>

</manifest>